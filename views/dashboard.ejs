<%- include("templates/header", {tab: "dashboard" }) %>
<main>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="text-primary my-5">Dashboard</h1>
        <div class="d-flex flex-column align-items-center">
          <h3 class="text-primary p-2 my-2">Crear un SuperHeroe</h3>
          <a class="btn btn-success w-25" type="submit" href="/dashboard/crear">
            Crear
          </a>
        </div>
        <table class="table mt-5">
          <thead>
            <tr>
              <th scope="col">#id</th>
              <th scope="col">Name</th>
              <th scope="col">Description</th>
              <th scope="col">Detail</th>
            </tr>
          </thead>
          <tbody>
            <% if (heroes.length > 0 ) { %> <% heroes.forEach(heroe => { %>
            <tr>
              <th scope="row"><%= heroe.id %></th>
              <td><%= heroe.name %></td>
              <td><%= heroe.description %></td>
              <td>
                <a
                  href="/dashboard/<%= heroe.id %>"
                  class="btn btn-primary btn-sm"
                >
                  view
                </a>
              </td>
            </tr>
            <% }) %> <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
<%- include("templates/footer") %>
