<%- include("templates/header", {tab: "Crear Heroe" }) %>
<main>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="text-primary my-5">Crea un SuperHeroe</h1>
        <a class="btn btn-secondary" href="/dashboard"> GoBack </a>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-5">
        <h1 class="text-secondary">Crea un Heroe</h1>
        <form action="/dashboard" method="POST">
          <input
            type="text"
            placeholder="Name"
            name="name"
            class="form-control my-3"
          />
          <textarea
            type="text"
            placeholder="Description"
            name="description"
            class="form-control my-3"
          ></textarea>
          <div class="d-flex p-2 my-2 justify-content-center">
            <button class="btn btn-primary" type="submit">Crear</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>
<%- include("templates/footer") %>
